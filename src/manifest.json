{
  "manifest_version": 2,
  "name": "Like",
  "description": "Make likes that are stored on the Ethereum blockchain. Uses your GetLogin account.",
  "version": "0.1",
  "icons": {
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/heart-wait.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "background",
    "storage"
  ]
}
